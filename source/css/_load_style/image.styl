.loading-bg
  position fixed
  z-index 1000
  width 50%
  height 100%
  background #eee
  

#loading-box
  .loading-left-bg
    @extend .loading-bg
    left 0
  .loading-right-bg
    @extend .loading-bg
    right 0
  &.loaded
    z-index -1000
    .loading-left-bg
      transition all 1.0s
      // transform translate(-100%, 0)
    .loading-right-bg
      transition all 1.0s
      // transform translate(100%, 0)
#loading-box
  position fixed
  z-index 1000
  display -webkit-box
  display flex
  -webkit-box-align center
  align-items center
  -webkit-box-pack center
  justify-content center
  -webkit-box-orient vertical
  -webkit-box-direction normal
  flex-direction column
  flex-wrap wrap
  width 100vw
  height 100vh
  overflow hidden

  .load-image
    position fixed
    z-index 1001
    display flex
    width 180px
    height 180px
    border-radius 50%

  &.loaded
    .load-image
      display none

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}


@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

.load-image.blink {
  animation: blink 0.8s ease-in-out infinite alternate;
}

.load-image.fadeOut {
  animation-name: fadeOut;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
} 

#loading-box.fadeOut {
  animation-name: fadeOut;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
} 